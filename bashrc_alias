#
# ~/Documents/code/scripts/scripts-n-stuff/bashrc_alias
#

## META
alias sudo='sudo '
alias which='which '

## SAFETY
alias rm='rm -vI --preserve-root'
alias chown='chown -v --preserve-root'
alias chmod='chmod -v --preserve-root'
alias chgrp='chgrp -v --preserve-root'

## OPTIONS
alias cp='cp -v'
alias mv='mv -v'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias ls='ls -ANv --group-directories-first --color=auto'
alias ll='ls -lhg'
alias less='less -R '
alias watch='watch -d -n 1 '

## GREPS
alias grep='grep -i --color=auto'
alias fgrep='grep -F'
alias egrep='grep -E'
alias pgrep='grep -P'

## LAZY
alias py='python3'
alias pip='pip3'
alias jctl='journalctl -exb'
alias bashrc='nvim ~/Documents/code/scripts/scripts-n-stuff/'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

## MISC
alias rb='. ~/.bashrc'
alias restart-plasma='killall plasmashell && kstart5 plasmashell'
alias paccache-show='paccache -duvk1 && paccache -dvk2'
alias paccache-rm='paccache -ruvk1 && paccache -rvk2'
alias mull='nohup mullvad-browser &'
alias plex='exclude chromium'

